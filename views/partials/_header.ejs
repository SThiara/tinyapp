<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username === undefined) { %>
      <form method="POST" action="/login">
        <div class="form-group mb-2">
          <label for="username" class="navbar-dark"> </label>
          <input class="form-center" type="text" name="username" placeholder="username" style="width: 250px; margin: 1em">
          <button type="submit" class="btn btn-primary">User Login</button>
        </div>
      </form>
      <% } else { %>
        <div>
          <a class="nav-item nav-link"> User logged in: <%= username %> </a>  <!-- a little ugly -->
      </div>
      <div>
      <form method="POST" action="/logout">
        <!-- <div class="form-group mb-2">
    <input type="submit" name="username" value="logout"/>
  </div> -->
        <div class="form-group mb-2">
          <button type="submit" class="btn btn-primary">logout</button>
        </div>
      </form>
    </div>
        <% } %>
  </nav>
</header>

